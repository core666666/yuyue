<Window x:Class="YuYue.Views.HotkeySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="热键设置" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="快捷键配置" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="自定义全局热键，提升操作效率" FontSize="12" Foreground="#7F8C8D"/>
        </StackPanel>
        
        <!-- 热键列表 -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="HotkeyList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Description}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Action}" FontSize="11" Foreground="#95A5A6"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1" 
                                             Text="{Binding DisplayText}"
                                             FontFamily="Consolas"
                                             FontSize="13"
                                             Background="#ECF0F1"
                                             Padding="8,4"
                                             Margin="10,0"
                                             VerticalAlignment="Center"/>
                                    
                                    <Button Grid.Column="2" 
                                          Content="修改"
                                          Click="EditHotkey_Click"
                                          Tag="{Binding}"
                                          Background="#95A5A6"
                                          Padding="8,4"/>
                                    
                                    <CheckBox Grid.Column="3"
                                            IsChecked="{Binding IsEnabled}"
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0"
                                            ToolTip="启用/禁用此热键"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- 冲突提示 -->
        <Border Grid.Row="2" 
                x:Name="ConflictWarning"
                Background="#FFF3CD"
                BorderBrush="#FFC107"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,10,0,0"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠" FontSize="16" Margin="0,0,8,0" Foreground="#856404"/>
                <TextBlock x:Name="ConflictMessage" 
                         Text="热键冲突：该组合键已被系统或其他程序占用"
                         Foreground="#856404"
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="恢复默认" Click="RestoreDefaults_Click" Background="#95A5A6"/>
            <Button Content="保存" Click="Save_Click"/>
            <Button Content="取消" Click="Cancel_Click" Background="#E74C3C"/>
        </StackPanel>
    </Grid>
</Window>
