<UserControl x:Class="YuYue.Views.AdvancedReaderControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolConverter"/>
        
        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="PanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="#F8F9FA" Padding="12,8" CornerRadius="6,6,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧工具 -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="📖 章节" Style="{StaticResource ToolButton}"
                            Command="{Binding ToggleChapterPanelCommand}"/>
                    <Button Content="🔖 书签" Style="{StaticResource ToolButton}"
                            Command="{Binding ToggleBookmarkPanelCommand}"/>
                    <Button Content="📊 统计" Style="{StaticResource ToolButton}"
                            Command="{Binding ToggleStatisticsPanelCommand}"/>
                    <Button Content="🎨 主题" Style="{StaticResource ToolButton}"
                            Command="{Binding NextThemeCommand}"/>
                    <Button Content="⏱️ 计时" Style="{StaticResource ToolButton}"
                            Command="{Binding ToggleTimerCommand}"/>
                    <TextBlock Text="{Binding TimerDisplay}" 
                               VerticalAlignment="Center"
                               Margin="8,0"
                               FontFamily="Consolas"
                               FontSize="14"
                               Foreground="#2C3E50"/>
                </StackPanel>
                
                <!-- 右侧工具 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding Themes}"
                              SelectedItem="{Binding SelectedTheme}"
                              DisplayMemberPath="Name"
                              Width="120"
                              Margin="4,0"/>
                    <Button Content="1栏" Style="{StaticResource ToolButton}"
                            Command="{Binding SetColumnCountCommand}"
                            CommandParameter="1"/>
                    <Button Content="2栏" Style="{StaticResource ToolButton}"
                            Command="{Binding SetColumnCountCommand}"
                            CommandParameter="2"/>
                    <Button Content="3栏" Style="{StaticResource ToolButton}"
                            Command="{Binding SetColumnCountCommand}"
                            CommandParameter="3"/>
                    <ToggleButton Content="🎯 沉浸" 
                                  IsChecked="{Binding IsImmersiveMode}"
                                  Padding="10,6" Margin="4,0"/>
                    <ToggleButton Content="⏩ 自动翻页" 
                                  IsChecked="{Binding IsAutoPageEnabled}"
                                  Padding="10,6" Margin="4,0"/>
                    <Button Content="⚙️" 
                            Command="{Binding OpenAutoScrollSettingsCommand}"
                            ToolTip="自动滚动设置"
                            Padding="10,6" Margin="4,0"
                            Style="{StaticResource ToolButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 阅读内容 -->
            <Border Grid.Column="0" 
                    Background="{Binding CurrentBackground}"
                    Margin="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 单栏 -->
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="3"
                                   Text="{Binding PageContent}"
                                   FontSize="{Binding ReaderFontSize}"
                                   Foreground="{Binding CurrentForeground}"
                                   TextWrapping="Wrap"
                                   LineHeight="{Binding ReaderLineHeight}"
                                   Padding="32">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ColumnCount}" Value="2">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ColumnCount}" Value="3">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- 多栏布局占位 -->
                        <TextBlock Grid.Column="0" 
                                   Text="第一栏内容"
                                   Visibility="Collapsed"/>
                    </Grid>
                </ScrollViewer>
            </Border>
            
            <!-- 侧边面板 -->
            <StackPanel Grid.Column="1" Width="280">
                
                <!-- 章节面板 -->
                <Border Style="{StaticResource PanelStyle}"
                        Visibility="{Binding ShowChapterPanel, Converter={StaticResource BoolConverter}}">
                    <StackPanel>
                        <TextBlock Text="📖 章节目录" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>
                        <ListBox ItemsSource="{Binding Chapters}"
                                 SelectedItem="{Binding SelectedChapter}"
                                 MaxHeight="300"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" 
                                               TextTrimming="CharacterEllipsis"
                                               Cursor="Hand">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.JumpToChapterCommand, 
                                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="上一章" Command="{Binding PreviousChapterCommand}" 
                                    Style="{StaticResource ToolButton}"/>
                            <Button Content="下一章" Command="{Binding NextChapterCommand}"
                                    Style="{StaticResource ToolButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- 书签面板 -->
                <Border Style="{StaticResource PanelStyle}"
                        Visibility="{Binding ShowBookmarkPanel, Converter={StaticResource BoolConverter}}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="🔖 我的书签" FontSize="16" FontWeight="Bold"/>
                            <Button Content="+" HorizontalAlignment="Right"
                                    Command="{Binding AddBookmarkCommand}"
                                    Width="30" Height="30"/>
                        </Grid>
                        <ListBox ItemsSource="{Binding Bookmarks}"
                                 MaxHeight="300"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Cursor="Hand">
                                            <StackPanel.InputBindings>
                                                <MouseBinding MouseAction="LeftClick"
                                                              Command="{Binding DataContext.JumpToBookmarkCommand,
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding}"/>
                                            </StackPanel.InputBindings>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding CreatedUtc, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                                       FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="×" 
                                                Command="{Binding DataContext.DeleteBookmarkCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="24" Height="24"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- 统计面板 -->
                <Border Style="{StaticResource PanelStyle}"
                        Visibility="{Binding ShowStatisticsPanel, Converter={StaticResource BoolConverter}}">
                    <StackPanel>
                        <TextBlock Text="📊 阅读统计" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>
                        <StackPanel Margin="0,8">
                            <TextBlock Text="今日阅读时长" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text="{Binding TodayReadingMinutes, StringFormat='{}{0} 分钟'}"
                                       FontSize="24" FontWeight="Bold" Foreground="#3498DB"/>
                        </StackPanel>
                        <StackPanel Margin="0,8">
                            <TextBlock Text="阅读进度" Foreground="Gray" FontSize="12"/>
                            <ProgressBar Height="20" Maximum="100" 
                                         Value="{Binding ProgressPercentage}"/>
                            <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0:F1}%'}"
                                       HorizontalAlignment="Center" Margin="0,4"/>
                        </StackPanel>
                        <StackPanel Margin="0,8">
                            <TextBlock Text="章节进度" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text="{Binding Chapters.Count, StringFormat='共 {0} 章'}"
                                       FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- 底部控制栏 -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="12,8" CornerRadius="0,0,6,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 翻页控制 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="⏮️ 首页" Command="{Binding JumpToBeginningCommand}"
                            Style="{StaticResource ToolButton}"/>
                    <Button Content="◀️ 上页" Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource ToolButton}"/>
                    <Button Content="下页 ▶️" Command="{Binding NextPageCommand}"
                            Style="{StaticResource ToolButton}"/>
                    <Button Content="末页 ⏭️" Command="{Binding JumpToEndCommand}"
                            Style="{StaticResource ToolButton}"/>
                </StackPanel>
                
                <!-- 进度显示 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ProgressDisplay}" Margin="8,0"/>
                    <ProgressBar Width="200" Height="8" Maximum="100"
                                 Value="{Binding ProgressPercentage}" Margin="8,0"/>
                    <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0:F1}%'}" Margin="8,0"/>
                </StackPanel>
                
                <!-- 排版设置 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="段距:" VerticalAlignment="Center" Margin="4,0"/>
                    <Slider Width="80" Minimum="0" Maximum="20" 
                            Value="{Binding ParagraphSpacing}"
                            TickFrequency="2" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="行距:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <Slider Width="80" Minimum="1.0" Maximum="3.0" 
                            Value="{Binding ReaderLineHeight}"
                            TickFrequency="0.2" IsSnapToTickEnabled="True"/>
                    <CheckBox Content="首行缩进" IsChecked="{Binding EnableFirstLineIndent}"
                              VerticalAlignment="Center" Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
