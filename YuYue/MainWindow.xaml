<Window x:Class="YuYue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="鱼阅 - 碎片化阅读器"
        Height="720"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolConverter"/>

        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionGridStyle" TargetType="Grid">
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.28"
                          Color="Black"/>
    </Window.Effect>

    <Border Background="#F5F7FA"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#E0E6ED">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#22313F"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="18,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="🐟"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="鱼阅"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,0,0">
                        <Button Content="书架"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding NavigateToBookshelfCommand}"/>
                        <Button Content="阅读"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding OpenSelectedBookCommand}"
                                ToolTip="打开选中的书籍"/>
                        <Button Content="设置"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding NavigateToSettingsCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,12,0">
                        <Button Content="—"
                                Style="{StaticResource TitleBarButton}"
                                Click="Minimize_Click"/>
                        <Button Content="□"
                                Style="{StaticResource TitleBarButton}"
                                Click="Maximize_Click"/>
                        <Button Content="×"
                                Style="{StaticResource TitleBarButton}"
                                Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <Border Grid.Column="0"
                        Background="#2C3E50"
                        Padding="18"
                        CornerRadius="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="沉浸阅读"
                                   Foreground="#BDC3C7"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="三页小说的小憩"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,8,0,20"/>

                        <Button Content="导入本地小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding ImportLocalBookCommand}"/>
                        <Button Content="返回书架"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding BackToBookshelfCommand}"/>
                        <Button Content="保存阅读进度"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding SaveCurrentProgressCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Border Grid.Column="1"
                        Background="#E0E6ED"/>

                <!-- Main Panels -->
                <Border Grid.Column="2"
                        Background="White"
                        Padding="24"
                        Margin="0,0,12,12"
                        CornerRadius="8">
                    <Grid>

                    <!-- Bookshelf View -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Bookshelf">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,16">
                            <TextBlock Text="我的书架"
                                       FontSize="22"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding StatusMessage}"
                                       Margin="12,0,0,0"
                                       Foreground="#95A5A6"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ListView Grid.Row="1"
                                  ItemsSource="{Binding Books}"
                                  SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
                                  BorderThickness="0"
                                  MouseDoubleClick="BooksListView_MouseDoubleClick"
                                  Background="Transparent">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="书名"
                                                    Width="260"
                                                    DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="进度">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <ProgressBar Width="120"
                                                                 Height="10"
                                                                 Maximum="1"
                                                                 Value="{Binding Progress, Mode=OneWay}"/>
                                                    <TextBlock Text="{Binding Progress, StringFormat={}{0:P0}}"
                                                               Margin="6,0,0,0"
                                                               Foreground="#7F8C8D"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="最近阅读">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LastOpenedUtc, StringFormat=yyyy-MM-dd HH:mm}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="路径"
                                                    Width="420"
                                                    DisplayMemberBinding="{Binding FilePath}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <!-- Reader View -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Reader">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,16">
                            <TextBlock Text="{Binding SelectedBook.Title}"
                                       FontSize="22"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ProgressDisplay}"
                                       Margin="16,0,0,0"
                                       Foreground="#7F8C8D"
                                       VerticalAlignment="Center"/>
                            <ProgressBar Width="160"
                                         Height="12"
                                         Margin="16,0,0,0"
                                         Maximum="100"
                                         Value="{Binding ProgressPercentage, Mode=OneWay}"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="每页字数:"
                                           VerticalAlignment="Center"/>
                                <TextBox Width="60"
                                         Margin="6,0,0,0"
                                         Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Row="1"
                                Background="#FBFCFE"
                                BorderBrush="#E0E6ED"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding PageContent}"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           LineHeight="26"
                                           Padding="24"/>
                            </ScrollViewer>
                        </Border>

                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,16,0,0">
                            <Button Content="上一页"
                                    Width="90"
                                    Height="32"
                                    Margin="0,0,10,0"
                                    Command="{Binding PreviousPageCommand}"/>
                            <Button Content="下一页"
                                    Width="90"
                                    Height="32"
                                    Margin="0,0,10,0"
                                    Command="{Binding NextPageCommand}"/>
                            <Button Content="返回书架"
                                    Width="100"
                                    Height="32"
                                    Command="{Binding BackToBookshelfCommand}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Settings Placeholder -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Settings">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="设置功能开发中"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="敬请期待全局热键、伪装模式与主题定制等配置项。"
                                       Margin="0,12,0,0"
                                       Foreground="#7F8C8D"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="#ECF0F1"
                    CornerRadius="0,0,12,12"
                    Padding="16,0">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               Foreground="#7F8C8D"/>
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right">
                        <TextBlock Text="快捷键: Ctrl+O 导入（计划中）"
                                   Foreground="#95A5A6"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="版本 v0.1.0"
                                   Foreground="#95A5A6"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>
