<Window x:Class="YuYue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:YuYue.Models"
        mc:Ignorable="d"
        Title="鱼阅 - 碎片化阅读器"
        Height="720"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Topmost="{Binding IsWindowTopmost}"
        Opacity="{Binding WindowOpacity}">

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding ImportLocalBookCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCurrentProgressCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedBookCommand}"/>
        <KeyBinding Key="Return" Command="{Binding OpenSelectedBookCommand}"/>
        <KeyBinding Key="Enter" Command="{Binding OpenSelectedBookCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding BackToBookshelfCommand}"/>
        <KeyBinding Key="PageDown" Command="{Binding NextPageCommand}"/>
        <KeyBinding Key="PageUp" Command="{Binding PreviousPageCommand}"/>
        <KeyBinding Key="Right" Command="{Binding NextPageCommand}"/>
        <KeyBinding Key="Left" Command="{Binding PreviousPageCommand}"/>
        <KeyBinding Key="Home" Command="{Binding JumpToBeginningCommand}"/>
        <KeyBinding Key="End" Command="{Binding JumpToEndCommand}"/>
        <KeyBinding Key="Add" Modifiers="Control" Command="{Binding IncreaseFontSizeCommand}"/>
        <KeyBinding Key="Subtract" Modifiers="Control" Command="{Binding DecreaseFontSizeCommand}"/>
        <KeyBinding Key="OemPlus" Modifiers="Control" Command="{Binding IncreaseFontSizeCommand}"/>
        <KeyBinding Key="OemMinus" Modifiers="Control" Command="{Binding DecreaseFontSizeCommand}"/>
        <KeyBinding Key="T" Modifiers="Control" Command="{Binding ToggleThemeCommand}"/>
        <KeyBinding Key="F12" Command="{Binding ToggleCamouflageModeCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Control" Command="{Binding NextCamouflageCommand}"/>
        <KeyBinding Key="H" Modifiers="Alt"
                    Command="{Binding HideToTrayCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Window.InputBindings>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolConverter"/>

        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionGridStyle" TargetType="Grid">
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.28"
                          Color="Black"/>
    </Window.Effect>

    <Border Background="#F5F7FA"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#E0E6ED">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#22313F"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="18,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="🐟"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="鱼阅"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Button Content="书架"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding NavigateToBookshelfCommand}"/>
                        <Button Content="阅读"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding OpenSelectedBookCommand}"
                                ToolTip="打开选中的书籍"/>
                        <Button Content="设置"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding NavigateToSettingsCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,12,0">
                        <Button Content="—"
                                Style="{StaticResource TitleBarButton}"
                                Click="Minimize_Click"/>
                        <Button Content="□"
                                Style="{StaticResource TitleBarButton}"
                                Click="Maximize_Click"/>
                        <Button Content="×"
                                Style="{StaticResource TitleBarButton}"
                                Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <Border Grid.Column="0"
                        Background="#2C3E50"
                        Padding="18"
                        CornerRadius="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="沉浸阅读"
                                   Foreground="#BDC3C7"
                                   FontSize="12"/>
                        <TextBlock Text="碎片化小说阅读"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,8,0,20"/>

                        <Button Content="导入本地小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding ImportLocalBookCommand}"/>
                        <Button Content="打开选中小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding OpenSelectedBookCommand}"/>
                        <Button Content="删除选中小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding DeleteSelectedBookCommand}"/>
                        <Button Content="返回书架"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding BackToBookshelfCommand}"/>
                        <Button Content="保存阅读进度"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding SaveCurrentProgressCommand}"/>
                        <Button Content="隐藏到托盘"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding HideToTrayCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <TextBlock Text="窗口控制"
                                   Margin="0,20,0,6"
                                   Foreground="#BDC3C7"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                        <CheckBox Content="窗口置顶"
                                  Margin="4,4,0,0"
                                  Foreground="#ECF0F1"
                                  IsChecked="{Binding IsWindowTopmost, Mode=TwoWay}"/>
                        <CheckBox Content="无边框模式"
                                  Margin="4,4,0,0"
                                  Foreground="#ECF0F1"
                                  IsChecked="{Binding IsBorderless, Mode=TwoWay}"/>
                        <StackPanel Orientation="Vertical"
                                    Margin="0,10,0,0">
                            <TextBlock Text="{Binding WindowOpacity, StringFormat=透明度 {0:P0}}"
                                       Foreground="#ECF0F1"
                                       FontSize="12"/>
                            <Slider Minimum="0.4"
                                    Maximum="1.0"
                                    Value="{Binding WindowOpacity, Mode=TwoWay}"
                                    TickFrequency="0.05"
                                    IsSnapToTickEnabled="True"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Border Grid.Column="1"
                        Background="#E0E6ED"/>

                <!-- Main Panels -->
                <Border Grid.Column="2"
                        Background="White"
                        Padding="24"
                        Margin="0,0,12,12"
                        CornerRadius="8">
                    <Grid>

                    <!-- Bookshelf View -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Bookshelf">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,16">
                            <TextBlock Text="我的书架"
                                       FontSize="22"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding StatusMessage}"
                                       Margin="12,0,0,0"
                                       Foreground="#95A5A6"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ListView Grid.Row="1"
                                  ItemsSource="{Binding Books}"
                                  SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
                                  BorderThickness="0"
                                  MouseDoubleClick="BooksListView_MouseDoubleClick"
                                  Background="Transparent">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="书名"
                                                    Width="260"
                                                    DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="进度">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <ProgressBar Width="120"
                                                                 Height="10"
                                                                 Maximum="1"
                                                                 Value="{Binding Progress, Mode=OneWay}"/>
                                                    <TextBlock Text="{Binding Progress, StringFormat={}{0:P0}}"
                                                               Margin="6,0,0,0"
                                                               Foreground="#7F8C8D"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="最近阅读">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LastOpenedUtc, StringFormat=yyyy-MM-dd HH:mm}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="路径"
                                                    Width="420"
                                                    DisplayMemberBinding="{Binding FilePath}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <!-- Reader View -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Reader">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="{Binding SelectedBook.Title, TargetNullValue=未选择书籍}"
                                           FontSize="22"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ProgressDisplay}"
                                           Margin="16,0,0,0"
                                           Foreground="#7F8C8D"
                                           VerticalAlignment="Center"/>
                                <ProgressBar Width="160"
                                             Height="12"
                                             Margin="16,0,0,0"
                                             Maximum="100"
                                             Value="{Binding ProgressPercentage, Mode=OneWay}"/>
                                <StackPanel Orientation="Horizontal"
                                            Margin="16,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="每页字数:"
                                               VerticalAlignment="Center"
                                               Foreground="#7F8C8D"/>
                                    <TextBox Width="64"
                                             Margin="6,0,0,0"
                                             TextAlignment="Center"
                                             Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="0,0,0,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="伪装模式已开启"
                                           Foreground="#7F8C8D"
                                           FontSize="18"/>
                                <TextBlock Text="{Binding CamouflageStatus}"
                                           Foreground="#95A5A6"/>
                            </StackPanel>

                            <Grid Grid.Column="1"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0">
                                    <ToggleButton Content="夜间模式"
                                                  Padding="12,4"
                                                  IsChecked="{Binding UseDarkTheme, Mode=TwoWay}">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    <Button Content="Aa+"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding IncreaseFontSizeCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Aa-"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding DecreaseFontSizeCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="字多"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding IncreasePageSizeCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="字少"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding DecreasePageSizeCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="重置"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding ResetReaderPreferencesCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <!-- 新增高级功能按钮 -->
                                    <ComboBox ItemsSource="{Binding Themes}"
                                              SelectedItem="{Binding SelectedTheme}"
                                              DisplayMemberPath="Name"
                                              Width="100"
                                              Margin="8,0,0,0"
                                              ToolTip="选择主题">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                    <Button Content="📖章节"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding ToggleChapterPanelCommand}"
                                            ToolTip="章节导航">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="🔖书签"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding ToggleBookmarkPanelCommand}"
                                            ToolTip="书签管理">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="📊统计"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding ToggleStatisticsPanelCommand}"
                                            ToolTip="阅读统计">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <ToggleButton Content="⏱️计时"
                                                  Margin="8,0,0,0"
                                                  Padding="12,4"
                                                  IsChecked="{Binding IsTimerRunning}"
                                                  Command="{Binding ToggleTimerCommand}"
                                                  ToolTip="阅读计时">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    <TextBlock Text="{Binding TimerDisplay}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               FontFamily="Consolas"
                                               FontSize="14"
                                               Foreground="#2C3E50">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ToggleButton Content="🎯沉浸"
                                                  Margin="8,0,0,0"
                                                  Padding="12,4"
                                                  IsChecked="{Binding IsImmersiveMode}"
                                                  ToolTip="沉浸模式 (F11)">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="1"
                                            Margin="0,8,0,0">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ToggleButton Content="伪装模式"
                                                  Padding="12,4"
                                                  IsChecked="{Binding IsCamouflageMode, Mode=TwoWay}"/>
                                    <ComboBox ItemsSource="{Binding CamouflageTemplates}"
                                              SelectedItem="{Binding SelectedCamouflage}"
                                              DisplayMemberPath="DisplayName"
                                              Width="160"
                                              Margin="8,0,0,0"/>
                                    <Button Content="换一套"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding NextCamouflageCommand}"/>
                                    <Button Content="恢复阅读"
                                            Margin="8,0,0,0"
                                            Padding="12,4"
                                            Command="{Binding ExitCamouflageModeCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="12,4"/>
                                                <Setter Property="Margin" Value="8,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCamouflageMode}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 阅读内容区域 -->
                            <Border Grid.Column="0"
                                    Background="{Binding CurrentBackground}"
                                    BorderBrush="#E0E6ED"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,0,4,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock Text="{Binding PageContent}"
                                               FontSize="{Binding ReaderFontSize}"
                                               Foreground="{Binding CurrentForeground}"
                                               TextWrapping="Wrap"
                                               LineHeight="{Binding ReaderLineHeight}"
                                               Padding="24"/>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- 侧边面板区域 -->
                            <StackPanel Grid.Column="1" Width="280" Margin="4,0,0,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <!-- 章节面板 -->
                                <Border Background="White"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="16"
                                        Margin="0,0,0,8"
                                        Visibility="{Binding ShowChapterPanel, Converter={StaticResource BoolConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="📖 章节目录" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>
                                        <ListBox ItemsSource="{Binding Chapters}"
                                                 SelectedItem="{Binding SelectedChapter}"
                                                 MaxHeight="300"
                                                 BorderThickness="0">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Title}" 
                                                               TextTrimming="CharacterEllipsis"
                                                               Cursor="Hand">
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick"
                                                                          Command="{Binding DataContext.JumpToChapterCommand, 
                                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                                          CommandParameter="{Binding}"/>
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <Button Content="上一章" Command="{Binding PreviousChapterCommand}" 
                                                    Padding="10,6" Margin="0,0,4,0"/>
                                            <Button Content="下一章" Command="{Binding NextChapterCommand}"
                                                    Padding="10,6" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 书签面板 -->
                                <Border Background="White"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="16"
                                        Margin="0,0,0,8"
                                        Visibility="{Binding ShowBookmarkPanel, Converter={StaticResource BoolConverter}}">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,12">
                                            <TextBlock Text="🔖 我的书签" FontSize="16" FontWeight="Bold"/>
                                            <Button Content="+" HorizontalAlignment="Right"
                                                    Command="{Binding AddBookmarkCommand}"
                                                    Width="30" Height="30"/>
                                        </Grid>
                                        <ListBox ItemsSource="{Binding Bookmarks}"
                                                 MaxHeight="300"
                                                 BorderThickness="0">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0" Cursor="Hand">
                                                            <StackPanel.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick"
                                                                              Command="{Binding DataContext.JumpToBookmarkCommand,
                                                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </StackPanel.InputBindings>
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding CreatedUtc, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                                                       FontSize="10" Foreground="Gray"/>
                                                        </StackPanel>
                                                        <Button Grid.Column="1" Content="×" 
                                                                Command="{Binding DataContext.DeleteBookmarkCommand,
                                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Width="24" Height="24"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 统计面板 -->
                                <Border Background="White"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="16"
                                        Visibility="{Binding ShowStatisticsPanel, Converter={StaticResource BoolConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="📊 阅读统计" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>
                                        <StackPanel Margin="0,8">
                                            <TextBlock Text="今日阅读时长" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="{Binding TodayReadingMinutes, StringFormat='{}{0} 分钟'}"
                                                       FontSize="24" FontWeight="Bold" Foreground="#3498DB"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,8">
                                            <TextBlock Text="阅读进度" Foreground="Gray" FontSize="12"/>
                                            <ProgressBar Height="20" Maximum="100" 
                                                         Value="{Binding ProgressPercentage, Mode=OneWay}"/>
                                            <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0:F1}%'}"
                                                       HorizontalAlignment="Center" Margin="0,4"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,8">
                                            <TextBlock Text="章节进度" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="{Binding Chapters.Count, StringFormat='共 {0} 章'}"
                                                       FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- 伪装模式内容区域 -->
                        <Border Grid.Row="1"
                                Panel.ZIndex="100"
                                Background="#F7F9FC"
                                BorderBrush="#E0E6ED"
                                BorderThickness="1"
                                CornerRadius="6">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <StackPanel Margin="24,16,24,0">
                                    <TextBlock Text="伪装模式"
                                               FontSize="20"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CamouflageStatus}"
                                               Margin="0,4,0,0"
                                               Foreground="#95A5A6"/>
                                    <TextBlock Text="按 F12 可在伪装与阅读之间切换。"
                                               Margin="0,8,0,0"
                                               Foreground="#BDC3C7"/>
                                </StackPanel>

                                <Grid Margin="24,80,24,24">
                                    <Grid x:Name="CodeCamouflage">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedCamouflage.Key}" Value="code">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="42"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="4,4,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="12,0" VerticalAlignment="Center">
                                                <Ellipse Fill="#FF5F56" Width="10" Height="10" Margin="0,0,6,0"/>
                                                <Ellipse Fill="#FFBD2E" Width="10" Height="10" Margin="0,0,6,0"/>
                                                <Ellipse Fill="#27C93F" Width="10" Height="10"/>
                                                <TextBlock Text="ReportGenerator.cs"
                                                           Foreground="#DADADA"
                                                           Margin="12,0,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="0,0,4,4" Padding="18">
                                            <StackPanel>
                                                <TextBlock Text="public class ReportGenerator"
                                                           Foreground="#9CDCFE"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="{}{"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="    public void GenerateReport()"
                                                           Foreground="#DCDCAA"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="{}    {"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="        var rows = FetchData();"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="        if (!rows.Any())"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="{}        {"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="            Log(&quot;No data&quot;);"
                                                           Foreground="#CE9178"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="            return;"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="        }"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text=""
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="        Export(rows);"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="    }"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text="}"
                                                           Foreground="#D4D4D4"
                                                           FontFamily="Consolas"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <Grid x:Name="ExcelCamouflage" Margin="0,0,0,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedCamouflage.Key}" Value="excel">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Border Background="White" CornerRadius="4" BorderBrush="#D0D7DE" BorderThickness="1" Padding="12">
                                            <StackPanel>
                                                <TextBlock Text="Q3 团队绩效表"
                                                           FontWeight="SemiBold"
                                                           FontSize="16"/>
                                                <UniformGrid Rows="5" Columns="5" Margin="0,12,0,0">
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5" Background="#EEF4FF">
                                                        <TextBlock Text="部门" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5" Background="#EEF4FF">
                                                        <TextBlock Text="负责人" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5" Background="#EEF4FF">
                                                        <TextBlock Text="完成率" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5" Background="#EEF4FF">
                                                        <TextBlock Text="目标" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5" Background="#EEF4FF">
                                                        <TextBlock Text="本月进展" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="研发" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="林远" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="92%" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="CI/CD 全流程上线" TextWrapping="Wrap" Margin="6,0,6,0"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="已完成回归测试" TextWrapping="Wrap" Margin="6,0,6,0"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="市场" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="陈露" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="105%" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="新品上线渠道拓展" TextWrapping="Wrap" Margin="6,0,6,0"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="完成 3 场线上宣讲" TextWrapping="Wrap" Margin="6,0,6,0"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="运营" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="周航" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="88%" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="客服响应提速" TextWrapping="Wrap" Margin="6,0,6,0"/>
                                                    </Border>
                                                    <Border BorderBrush="#D0D7DE" BorderThickness="0.5">
                                                        <TextBlock Text="培训新同事 4 人" TextWrapping="Wrap" Margin="6,0,6,0"/>
                                                    </Border>
                                                </UniformGrid>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <Grid x:Name="BrowserCamouflage">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedCamouflage.Key}" Value="browser">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Border Background="White" CornerRadius="4" BorderBrush="#D0D7DE" BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="48"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Border Grid.Row="0" Background="#F2F4F7" Padding="12" CornerRadius="4,4,0,0">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Rectangle Fill="#4285F4" Width="16" Height="16" RadiusX="3" RadiusY="3"/>
                                                        <TextBlock Text="公司项目门户" Margin="8,0,0,0" FontWeight="SemiBold"/>
                                                        <Border Background="White" BorderBrush="#D0D7DE" BorderThickness="1" CornerRadius="12" Margin="12,0,0,0" Padding="12,2">
                                                            <TextBlock Text="https://intranet/projects/reading" Foreground="#4B5563"/>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                                <ScrollViewer Grid.Row="1" Padding="18">
                                                    <StackPanel>
                                                        <TextBlock Text="鱼阅 · 阅读效率提升方案" FontSize="18" FontWeight="SemiBold"/>
                                                        <TextBlock Text="更新时间：2025-10-15" Foreground="#95A5A6" Margin="0,6,0,12"/>
                                                        <TextBlock Text="• 本周完成现有工具调研，整理三家竞品优劣。" Margin="0,2,0,0"/>
                                                        <TextBlock Text="• 正在推进桌面端 MVP，目标下周内完成演示版。" Margin="0,2,0,0"/>
                                                        <TextBlock Text="• 需与法务确认书源合规问题，预计周五给出处理建议。" Margin="0,2,0,0"/>
                                                        <Border Background="#F8FAFC" BorderBrush="#D0D7DE" BorderThickness="1" CornerRadius="4" Margin="0,12,0,0" Padding="12">
                                                            <TextBlock Text="提醒：请在 10 月 20 日前提交最新需求排期。" Foreground="#2563EB"/>
                                                        </Border>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                        <Grid Grid.Row="2"
                              Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCamouflageMode}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Button Content="回到开头"
                                        Width="90"
                                        Height="32"
                                        Command="{Binding JumpToBeginningCommand}"/>
                                <Button Content="跳至结尾"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding JumpToEndCommand}"/>
                                <Button Content="上一页"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding PreviousPageCommand}"/>
                                <Button Content="下一页"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding NextPageCommand}"/>
                                <Button Content="返回书架"
                                        Width="100"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding BackToBookshelfCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Settings Placeholder -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Settings">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel Margin="0,40,0,0"
                                    Width="420"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top">
                            <TextBlock Text="阅读器设置"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <CheckBox Content="启动时自动恢复上次阅读位置"
                                      Margin="0,12,0,0"
                                      FontSize="14"
                                      IsChecked="{Binding AutoResumeLastBook, Mode=TwoWay}"/>
                            <CheckBox Content="夜间模式"
                                      Margin="0,8,0,0"
                                      FontSize="14"
                                      IsChecked="{Binding UseDarkTheme, Mode=TwoWay}"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,8,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="默认每页字数:"
                                           VerticalAlignment="Center"/>
                                <TextBox Width="80"
                                         Margin="8,0,0,0"
                                         TextAlignment="Center"
                                         Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <TextBlock Text="更多高级功能（全局热键、伪装模式、书源管理等）将在后续迭代中陆续上线。"
                                       Margin="0,12,0,0"
                                       TextWrapping="Wrap"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="#ECF0F1"
                    CornerRadius="0,0,12,12"
                    Padding="16,0">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               Foreground="#7F8C8D"/>
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right"><TextBlock Text="YuYue v2.0" Foreground="#95A5A6" VerticalAlignment="Center" Margin="12,0,0,0"/></StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>







