<Window x:Class="YuYue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="鱼阅 - 碎片化阅读器"
        Height="720"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding ImportLocalBookCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCurrentProgressCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedBookCommand}"/>
        <KeyBinding Key="Return" Command="{Binding OpenSelectedBookCommand}"/>
        <KeyBinding Key="Enter" Command="{Binding OpenSelectedBookCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding BackToBookshelfCommand}"/>
        <KeyBinding Key="PageDown" Command="{Binding NextPageCommand}"/>
        <KeyBinding Key="PageUp" Command="{Binding PreviousPageCommand}"/>
        <KeyBinding Key="Right" Command="{Binding NextPageCommand}"/>
        <KeyBinding Key="Left" Command="{Binding PreviousPageCommand}"/>
        <KeyBinding Key="Home" Command="{Binding JumpToBeginningCommand}"/>
        <KeyBinding Key="End" Command="{Binding JumpToEndCommand}"/>
        <KeyBinding Key="Add" Modifiers="Control" Command="{Binding IncreaseFontSizeCommand}"/>
        <KeyBinding Key="Subtract" Modifiers="Control" Command="{Binding DecreaseFontSizeCommand}"/>
        <KeyBinding Key="OemPlus" Modifiers="Control" Command="{Binding IncreaseFontSizeCommand}"/>
        <KeyBinding Key="OemMinus" Modifiers="Control" Command="{Binding DecreaseFontSizeCommand}"/>
        <KeyBinding Key="T" Modifiers="Control" Command="{Binding ToggleThemeCommand}"/>
        <KeyBinding Key="H" Modifiers="Alt"
                    Command="{Binding HideToTrayCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Window.InputBindings>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolConverter"/>

        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionGridStyle" TargetType="Grid">
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.28"
                          Color="Black"/>
    </Window.Effect>

    <Border Background="#F5F7FA"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#E0E6ED">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#22313F"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="18,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="🐟"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="鱼阅"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,0,0">
                        <Button Content="书架"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding NavigateToBookshelfCommand}"/>
                        <Button Content="阅读"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding OpenSelectedBookCommand}"
                                ToolTip="打开选中的书籍"/>
                        <Button Content="设置"
                                Margin="0,0,6,0"
                                Style="{StaticResource TitleBarButton}"
                                Command="{Binding NavigateToSettingsCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,12,0">
                        <Button Content="—"
                                Style="{StaticResource TitleBarButton}"
                                Click="Minimize_Click"/>
                        <Button Content="□"
                                Style="{StaticResource TitleBarButton}"
                                Click="Maximize_Click"/>
                        <Button Content="×"
                                Style="{StaticResource TitleBarButton}"
                                Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <Border Grid.Column="0"
                        Background="#2C3E50"
                        Padding="18"
                        CornerRadius="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="沉浸阅读"
                                   Foreground="#BDC3C7"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="三页小说的小憩"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,8,0,20"/>

                        <Button Content="导入本地小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding ImportLocalBookCommand}"/>
                        <Button Content="打开选中小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding OpenSelectedBookCommand}"/>
                        <Button Content="删除选中小说"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding DeleteSelectedBookCommand}"/>
                        <Button Content="返回书架"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding BackToBookshelfCommand}"/>
                        <Button Content="保存阅读进度"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding SaveCurrentProgressCommand}"/>
                        <Button Content="隐藏到托盘"
                                Style="{StaticResource SideMenuButton}"
                                Command="{Binding HideToTrayCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Border Grid.Column="1"
                        Background="#E0E6ED"/>

                <!-- Main Panels -->
                <Border Grid.Column="2"
                        Background="White"
                        Padding="24"
                        Margin="0,0,12,12"
                        CornerRadius="8">
                    <Grid>

                    <!-- Bookshelf View -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Bookshelf">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,16">
                            <TextBlock Text="我的书架"
                                       FontSize="22"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding StatusMessage}"
                                       Margin="12,0,0,0"
                                       Foreground="#95A5A6"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ListView Grid.Row="1"
                                  ItemsSource="{Binding Books}"
                                  SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
                                  BorderThickness="0"
                                  MouseDoubleClick="BooksListView_MouseDoubleClick"
                                  Background="Transparent">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="书名"
                                                    Width="260"
                                                    DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="进度">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <ProgressBar Width="120"
                                                                 Height="10"
                                                                 Maximum="1"
                                                                 Value="{Binding Progress, Mode=OneWay}"/>
                                                    <TextBlock Text="{Binding Progress, StringFormat={}{0:P0}}"
                                                               Margin="6,0,0,0"
                                                               Foreground="#7F8C8D"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="最近阅读">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LastOpenedUtc, StringFormat=yyyy-MM-dd HH:mm}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="路径"
                                                    Width="420"
                                                    DisplayMemberBinding="{Binding FilePath}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <!-- Reader View -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Reader">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedBook.Title, TargetNullValue=未选择书籍}"
                                           FontSize="22"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ProgressDisplay}"
                                           Margin="16,0,0,0"
                                           Foreground="#7F8C8D"
                                           VerticalAlignment="Center"/>
                                <ProgressBar Width="160"
                                             Height="12"
                                             Margin="16,0,0,0"
                                             Maximum="100"
                                             Value="{Binding ProgressPercentage, Mode=OneWay}"/>
                                <StackPanel Orientation="Horizontal"
                                            Margin="16,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="每页字数:"
                                               VerticalAlignment="Center"
                                               Foreground="#7F8C8D"/>
                                    <TextBox Width="64"
                                             Margin="6,0,0,0"
                                             TextAlignment="Center"
                                             Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                <ToggleButton Content="夜间模式"
                                              Padding="12,4"
                                              IsChecked="{Binding UseDarkTheme, Mode=TwoWay}"/>
                                <Button Content="Aa+"
                                        Margin="8,0,0,0"
                                        Padding="12,4"
                                        Command="{Binding IncreaseFontSizeCommand}"/>
                                <Button Content="Aa-"
                                        Margin="8,0,0,0"
                                        Padding="12,4"
                                        Command="{Binding DecreaseFontSizeCommand}"/>
                                <Button Content="字多"
                                        Margin="8,0,0,0"
                                        Padding="12,4"
                                        Command="{Binding IncreasePageSizeCommand}"/>
                                <Button Content="字少"
                                        Margin="8,0,0,0"
                                        Padding="12,4"
                                        Command="{Binding DecreasePageSizeCommand}"/>
                                <Button Content="重置"
                                        Margin="8,0,0,0"
                                        Padding="12,4"
                                        Command="{Binding ResetReaderPreferencesCommand}"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="1"
                                Background="{Binding ReaderBackground}"
                                BorderBrush="#E0E6ED"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding PageContent}"
                                           FontSize="{Binding ReaderFontSize}"
                                           Foreground="{Binding ReaderForeground}"
                                           TextWrapping="Wrap"
                                           LineHeight="{Binding ReaderLineHeight}"
                                           Padding="24"/>
                            </ScrollViewer>
                        </Border>

                        <Grid Grid.Row="2"
                              Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProgressDisplay}"
                                           Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}"
                                           Margin="16,0,0,0"
                                           Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding TotalLength, StringFormat=总字数 {0:N0}}"
                                           Margin="16,0,0,0"
                                           Foreground="#7F8C8D"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="回到开头"
                                        Width="90"
                                        Height="32"
                                        Command="{Binding JumpToBeginningCommand}"/>
                                <Button Content="跳至结尾"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding JumpToEndCommand}"/>
                                <Button Content="上一页"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding PreviousPageCommand}"/>
                                <Button Content="下一页"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding NextPageCommand}"/>
                                <Button Content="返回书架"
                                        Width="100"
                                        Margin="10,0,0,0"
                                        Height="32"
                                        Command="{Binding BackToBookshelfCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Settings Placeholder -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid" BasedOn="{StaticResource SectionGridStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}" Value="Settings">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel Margin="0,40,0,0"
                                    Width="420"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top">
                            <TextBlock Text="阅读器设置"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <CheckBox Content="启动时自动恢复上次阅读位置"
                                      Margin="0,12,0,0"
                                      FontSize="14"
                                      IsChecked="{Binding AutoResumeLastBook, Mode=TwoWay}"/>
                            <CheckBox Content="夜间模式"
                                      Margin="0,8,0,0"
                                      FontSize="14"
                                      IsChecked="{Binding UseDarkTheme, Mode=TwoWay}"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,8,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="默认每页字数:"
                                           VerticalAlignment="Center"/>
                                <TextBox Width="80"
                                         Margin="8,0,0,0"
                                         TextAlignment="Center"
                                         Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <TextBlock Text="更多高级功能（全局热键、伪装模式、书源管理等）将在后续迭代中陆续上线。"
                                       Margin="0,12,0,0"
                                       TextWrapping="Wrap"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="#ECF0F1"
                    CornerRadius="0,0,12,12"
                    Padding="16,0">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               Foreground="#7F8C8D"/>
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right">
                        <TextBlock Text="快捷键: Ctrl+O 导入 | Ctrl+S 保存 | Ctrl+T 夜间模式"
                                   Foreground="#95A5A6"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="版本 v0.1.0"
                                   Margin="12,0,0,0"
                                   Foreground="#95A5A6"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>
